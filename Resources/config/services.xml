<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="znd_user.profile_entity_class">ZND\USM\UserBundle\Entity\Profile</parameter>
        <parameter key="znd_user.user_entity_class">ZND\USM\UserBundle\Entity\User</parameter>
        <parameter key="znd_user.firewall_name">oauth_authorize</parameter>
        <parameter key="znd_user.db_driver">orm</parameter>
        <parameter key="znd_user.user.token_ttl">86400</parameter>
        <parameter key="znd_user.user.templates.confirm_user">@EventsUser/User/confirm_user.txt.twig</parameter>
        <parameter key="znd_user.user.templates.new_user">@EventsUser/User/new_user.html.twig</parameter>
        <parameter key="znd_user.admin.name">events_admin</parameter>
        <parameter key="znd_user.admin.address">events_admin@events.cd</parameter>
    </parameters>
</container>